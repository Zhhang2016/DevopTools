<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/common_shape_nodeal_progressdialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="common_chooseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@style/common_popuStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="common_popuStyle">
        <item name="android:windowEnterAnimation">@anim/common_popup_anim_in</item>
        <item name="android:windowExitAnimation">@anim/common_popup_anim_out</item>
    </style>

</resources>