<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uitestdemo.UIMainActivity">

    <TextView
           android:layout_centerInParent="true"
        android:textSize="20sp"
        android:id="@+id/tv_test"
        android:text="测试UI空间"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_below="@+id/tv_test"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_test_clickManager"
        android:text="测试复制文本测试复制文本"
        android:gravity="center"

        android:textIsSelectable="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



<com.juziwl.uilibrary.progressbar.MyProgressBar
    android:id="@+id/progress_bar2"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_alignParentBottom="true"
    android:layout_height="100dp" />



<com.juziwl.uilibrary.progressbar.MyProgressBarSecond
    android:id="@+id/progress_bar"
    android:layout_marginBottom="50dp"
    android:layout_centerHorizontal="true"
    android:background="@color/deep_orange_500"
    android:layout_width="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content" />








</RelativeLayout>
